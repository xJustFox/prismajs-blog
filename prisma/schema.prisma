generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id         Int       @id @default(autoincrement())
  tags       Tag[]
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  title      String
  slug       String    @unique
  image      String?
  content    String
  published  Boolean
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Category {
  id    Int    @id @default(autoincrement())
  posts Post[]
  name  String
}

model Tag {
  id   Int    @id @default(autoincrement())
  Post Post[]
  name String
}
